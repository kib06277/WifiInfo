<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PressureMon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--關閉夜間模式-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItem">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ListItem.Left">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="ListItem.Left.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ListItem.Center">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItem.Center.Header">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.PressureMon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PressureMon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PressureMon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseDetailTextInputLayoutItem">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="BaseDetailTextInputLayoutItem.Enabled">
        <item name="android:enabled">true</item>
    </style>
    <style name="BaseDetailTextInputLayoutItem.Enabled.InputNone">
        <item name="android:inputType">none</item>
    </style>
    <style name="BaseDetailTextInputLayoutItem.Text">
        <item name="android:inputType">text</item>
    </style>
</resources>